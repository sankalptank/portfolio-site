		<section>
			<h2>web design & data science</h2>
			<h3>current high school student</h3>
			<h4>temporary website</h4>
		</section>
	</main>
</Layout>

<style>
	*{
		font-family: "Space Grotesk", sans-serif;
		margin: 0%;
		padding: 0%;
	}
	main{
		background-color: black;
		height: 100vh;
		width: 100vw;
		display: flex;
		justify-content: space-between;
		background-image: url('/ooorganize.svg');
	}
	header{
		padding: 1rem 2rem;
	}
	section{
		color: white;
		font-size: 3rem;
		margin-top: 10rem;
		align-self: flex-end;
		padding: 5rem 2rem;
	}
	@media (max-width:1500px) {
		section{
			font-size: 2rem;
		}
	}
	@media (max-width:1000px) {
		section{
			font-size: 1.5rem;
			padding-left: 0;
		}
	}
	@media (max-width:900px) {
		section{
			font-size: 1.2rem;
		}
	}
	@media (max-width:700px) {
		section{
			font-size: 1.2rem;
			margin: 0;
			
		}
	@media (max-width:600px) {
		header{
			width: 100vw;
		}
	}
	}
	@media (max-width:500px) {
		section{
			font-size: 1rem;
		}
		h2 h3 h4{
			margin-bottom: 2.5rem;
		}

	}
</style>
