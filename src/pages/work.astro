	a{
		text-decoration: none;
	}

	section{
		color: white;
		font-size: 2rem;
		width: 50vw;
		align-self: flex-end;
		overflow: scroll;
		scrollbar-width: none;
		scroll-snap-type: mandatory;
		scroll-margin-block-start: 20px;
	}

	.main-menu{
		color: white;
		list-style: none;
		width: 100%;
		padding-bottom: 14rem;
	}

	.sub-menu{
		list-style-type: none;
		row-gap: 2rem;
	}

	.sub-menu li{
		margin: 1rem 2rem;
	}
	.sub-menu h3{
		font-size: 3rem;
		font-family: "Space Grotesk", sans-serif;
		width: auto;
		color: white;
	}
	.sub-menu p{
		font-size: 1rem;
		font-weight: 300;
	}

	summary{
		font-size: 1.5rem;
		font-family: "Space Grotesk", sans-serif;
    	font-weight: 300;
		cursor: pointer;
	}
	@keyframes open {
		0% {
			opacity: 0;
			transform: translateY(-1vw);
		}
		100% {
			opacity: 1;
			margin-left: 0px
		}
	}

	details[open] summary~* {
		animation: open .5s cubic-bezier(0.785, 0.135, 0.15, 0.86);
	}
	@media (max-width:1500px) {
		section{
			font-size: 2rem;
		}
	}
	@media (max-width:1000px) {
		section{
			font-size: 1.5rem;
			padding-left: 0;
		}
	}
	@media (max-width:900px) {
		section{
			font-size: 1.2rem;
		}
	}
	@media (max-width:700px) {
		section{
			font-size: 1.2rem;
			margin: 0;
			
		}
		

	}
	@media (max-width:500px) {
		section{
			font-size: 1rem;
		}
